
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EmployeePayRollMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+MBR5U5l5tV3IX5r9z5lKz5pf5g3O9f5f5F5L5i5T5L5I5V5L5O5L5g5g5O5f5T5R5g5w5" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Index.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/custom.scss" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js" integrity="sha384-xGTuMgI5F5AL+o5v5A7f5n5x5f5P5b5g5f5u5s5f5O5e5z5o5q5E5R5V5L5f5T5R5g5w5" crossorigin="anonymous"></script>
</head>
<body>
    <header class="border-bottom shadow p-3 mb-5 bg-white">
        <div class="navbar">
            <div class="logo">
                <div >
                    <img src="/assets/logo.png" alt="logo" height="57" width="60">    
                </div>
                <div class="logo-txt">
                     <span class="emp-text"><b>EMPLOYEE</b></span><br>
                    <span class="payroll-text"><b>PAYROLL</b></span>
                </div>
            </div>
                
                <div >
                     <h6>
                        <span class="navusername">Welcome @TempData["Username"]</span>
                        <a class="login" asp-action="Login">Home</a>
                    </h6> 
                </div>
            </div>
    </header>

    <div class="container">
        <main role="main" class="pb-3 pt-10 employee-details rounded">
            @RenderBody()
        </main>
    </div>
   
        <footer class="border-top footer text-muted ">
        <div class="container">
            &copy; 2023 - EmployeePayRollMVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
         </footer>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" ></script>

    @RenderSection("Scripts", required: false)
</body>

</html>
